{
  "name": "way-farer",
  "version": "1.0.0",
  "description": "Andela Developer Challenge",
  "private": true,
  "scripts": {
    "test": "mocha --require @babel/register 'tests/**/*.test.js'",
    "webpack": "webpack",
    "start": "babel-node buildScripts/distServer.js",
    "prestart:dev": "npm-run-all --parallel security-check lint:watch",
    "start:dev": "nodemon --exec babel-node server/server.js",
    "security-check": "npm audit",
    "lint": "esw webpack.config.* server db buildScripts --color",
    "lint:watch": "npm run lint",
    "clean-dist": "rimraf ./dist && mkdir dist",
    "prebuild": "npm-run-all clean-dist lint dropDbTables createDbTables",
    "build": "babel-node buildScripts/build.js",
    "postbuild": "babel-node buildScripts/distServer.js",
    "createDbTables": "babel-node db/migrations/users createUsersTable && babel-node db/migrations/users seedUser && babel-node db/migrations/buses createBusesTable && babel-node db/migrations/trips createTripsTable && babel-node db/migrations/bookings createBookingsTable",
    "dropDbTables": "babel-node db/migrations/users dropUsersTable && babel-node db/migrations/bookings dropBookingsTable && babel-node db/migrations/buses dropBusesTable && babel-node db/migrations/trips dropTripsTable"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abolibot/Way-Farer.git"
  },
  "author": "Oluwatobi Alaran",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/abolibot/Way-Farer/issues"
  },
  "homepage": "https://github.com/abolibot/Way-Farer#readme",
  "dependencies": {
    "@babel/runtime": "^7.5.1",
    "@hapi/joi": "^15.1.0",
    "@types/hapi__joi": "^15.0.2",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "make-runnable": "^1.3.6",
    "pg": "^7.11.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.0",
    "@babel/node": "^7.5.0",
    "@babel/plugin-transform-runtime": "^7.5.0",
    "@babel/preset-env": "^7.5.0",
    "@babel/register": "^7.4.4",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "chalk": "^2.4.2",
    "coveralls": "^3.0.5",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-watch": "^5.1.2",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "webpack": "^4.35.2",
    "webpack-cli": "^3.3.5"
  }
}
